---
import PinterestIcon from '@/icons/pinterest.astro'
import LinkIcon from '@/icons/link.astro'
import ExternalLink from './external-link.astro'
---

<section
  class='px-12 py-20 min-h-100-screen flex flex-col items-center justify-center text-center gap-8'
>
  <!-- Título principal -->
  <div class='flex flex-col items-center gap-4'>
    <h2 class='font-licorice text-5xl text-primary-dark opacity-90'>
      Dress Code
    </h2>
    <div class='w-16 h-px bg-primary opacity-60'></div>
  </div>

  <!-- Contenido principal -->
  <div class='flex flex-col items-center gap-8 max-w-4xl w-full'>
    <!-- Mensaje principal -->
    <div class='text-center space-y-4'>
      <h3 class='text-2xl md:text-3xl font-semibold text-gray-800'>Elegante</h3>
      <p class='text-lg text-gray-600 leading-relaxed'>
        Te invitamos a vestir de
      </p>
      <div
        class='inline-flex items-center gap-3 px-6 py-3 bg-black rounded-full'
      >
        <div class='w-4 h-4 rounded-full bg-white border-2 border-gray-300'>
        </div>
        <span class='text-white font-medium text-lg tracking-wide'>
          COLOR NEGRO
        </span>
        <div class='w-4 h-4 rounded-full bg-white border-2 border-gray-300'>
        </div>
      </div>
    </div>

    <!-- Galería de ejemplos -->
    <div class='w-full max-w-2xl'>
      <h4 class='text-lg font-medium text-gray-700 mb-6'>
        Ejemplos de vestimenta
      </h4>
      <div class='grid grid-cols-1 md:grid-cols-2 gap-6'>
        <!-- Imagen femenina -->
        <div
          class='group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300'
        >
          <img
            src='/images/dress-code-1.webp'
            alt='Ejemplo de vestimenta elegante femenina en color negro'
            class='w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300'
          />
          <div
            class='absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent'
          >
          </div>
          <div class='absolute bottom-4 left-4 text-white'>
            <p class='font-medium'>Elegancia Femenina</p>
            <p class='text-sm opacity-90'>Vestido negro elegante</p>
          </div>
        </div>

        <!-- Imagen masculina -->
        <div
          class='group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300'
        >
          <img
            src='/images/dress-code-2.webp'
            alt='Ejemplo de vestimenta elegante masculina en color negro'
            class='w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300'
          />
          <div
            class='absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent'
          >
          </div>
          <div class='absolute bottom-4 left-4 text-white'>
            <p class='font-medium'>Elegancia Masculina</p>
            <p class='text-sm opacity-90'>Traje negro formal</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Enlace a Pinterest -->
    <div class='flex flex-col items-center gap-4'>
      <p class='text-gray-600'>¿Necesitas más inspiración?</p>
      <ExternalLink
        href='https://pin.it/5y7ID7BjE'
        text='Ver más ideas en Pinterest'
      />
    </div>

    <!-- Mensaje adicional -->
    <p class='text-sm text-gray-500 italic max-w-md leading-relaxed'>
      "La elegancia es la única belleza que nunca se desvanece"
    </p>
  </div>
</section>
